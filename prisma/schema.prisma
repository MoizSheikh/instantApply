generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Template {
  id        String   @id @default(cuid())
  name      String
  subject   String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  jobs        Job[]
  roleConfigs RoleConfig[]

  @@map("templates")
}

model RoleConfig {
  id         String   @id @default(cuid())
  role       String   @unique
  templateId String
  resumeName String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  // Relations
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@map("role_configs")
}

model Job {
  id          String    @id @default(cuid())
  jobTitle    String
  role        String
  contactEmail String
  companyName String?
  notes       String?
  resumeName  String
  status      String @default("DRAFT")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  sentAt      DateTime?
  
  // Foreign keys
  templateId  String
  template    Template  @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@map("jobs")
}

